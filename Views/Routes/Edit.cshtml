@model RouteConfigViewModel
@{
    ViewData["Title"] = "Edit Route";
}

<div class="d-flex align-items-center gap-3 mb-3">
    <a href="/Routes" class="btn btn-sm btn-outline-secondary"><i class="bi bi-arrow-left"></i></a>
    <h5 class="mb-0">Edit Route â€“ <span class="text-muted">@Model.Name</span></h5>
</div>

<div class="card">
    <div class="card-body">
        <form method="post">
            @Html.AntiForgeryToken()
            @await Html.PartialAsync("_RouteForm", Model)
            <div class="mt-3">
                <button type="submit" class="btn btn-primary"><i class="bi bi-check-lg me-1"></i>Save Changes</button>
                <a href="/Routes" class="btn btn-outline-secondary ms-2">Cancel</a>
            </div>
        </form>
    </div>
</div>
